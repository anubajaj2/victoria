				<FlexBox
					height="auto"
					alignItems="Center"
					justifyContent="Center">
					<items>

						<x:Avatar
							src="sap-icon://arrow-right"
							displaySize="M">
						</x:Avatar>

					</items>
				</FlexBox>
				<layoutData><l:SplitterLayoutData size="auto" /></layoutData>
			</Panel>
