<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
    <f:Form id="idcust1" editable="true">
      <f:layout>
        <f:ResponsiveGridLayout
          labelSpanXL="4"
          labelSpanL="3"
          labelSpanM="4"
          labelSpanS="12"
          adjustLabelSpan="false"
          emptySpanXL="0"
          emptySpanL="4"
          emptySpanM="0"
          emptySpanS="0"
          columnsXL="2"
          columnsL="1"
          columnsM="1"
          singleContainerFullSize="false"/>
      </f:layout>
      <f:formContainers>
      	<f:FormContainer ariaLabelledBy="Title2">
      <f:formElements>
        <f:FormElement label="Date">
          <f:fields>
            <Input width="auto" value="" id="idDate"/>
            <CheckBox text="Continue Entry" selected="true">
            <layoutData>
              <l:GridData span="XL4 L3 M5 S6"/>
            </layoutData>
          </CheckBox>
          </f:fields>
        </f:FormElement>
        <f:FormElement label="Customer">
          <f:fields>
            <Input  width="auto" value="" id="idCust">
              <layoutData>
                <l:GridData span="XL3 L2 M4 S5"/>
              </layoutData>
            </Input>
            <Input value="" id="idCustName" editable="false"/>
          </f:fields>
        </f:FormElement>
        </f:formElements>
        </f:FormContainer>
      </f:formContainers>
    </f:Form>
  </VBox>
</core:FragmentDefinition>
