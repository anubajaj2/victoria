  <core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
<VBox class="sapUISmallMargin">
<f:Form id="idCoForm2" editable="true">
<f:title>
<core:Title/>
</f:title>
<f:layout>
  <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="2"
              emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" adjustLabelSpan="false"
              columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false"/>
</f:layout>
<f:formContainers>
<f:FormContainer title="Order Details">
<f:formElements>
<f:FormElement label="{i18n>coMaterial}">
<f:fields>
<Input id="idCoMaterial" value="{local>/coTemp/MaterialCode}" showValueHelp="true" valueHelpRequest="onValueHelpMat">
</Input>
<Input id="idCoMatName" value="" editable="false"/>
</f:fields>
</f:FormElement>
<f:FormElement label="{i18n>coComb}">
<f:fields>
<Input value="{local>/customerOrder/Qty}" id="idCoQty" type="Number"   placeholder="{i18n>coQty}"/>
<Input value="{local>/customerOrder/Weight}" id="idCoWeight" type="Number" placeholder="{i18n>coWeight}"/>
<Input value="{local>/customerOrder/Making}" id="idCoMaking" type="Number"  placeholder="{i18n>coMaking}"/>
</f:fields>
</f:FormElement>
<f:FormElement label="{i18n>coKarigar}">
<f:fields>
<Input id="idCoKarigar" value="{local>/coTemp/KarigarCode}" showValueHelp="true" valueHelpRequest="onValueHelp"/>
<Input id="idCoKarigarName" value="" editable="false"/>
</f:fields>
</f:FormElement>
<f:FormElement label="{i18n>coRemarks}">
<f:fields>
<Input id="idCoRemarks" value="{local>/customerOrder/Remarks}"/>
</f:fields>
</f:FormElement>
</f:formElements>
<f:layoutData>
<f:GridContainerData halfGrid="true"></f:GridContainerData>
</f:layoutData>
</f:FormContainer>

<f:FormContainer title="Advances/Picture">
<f:formElements>
<f:FormElement label="Cash Advance">
<f:fields>
<Input id="idCoCash" type="Number" value="{local>/customerOrder/Cash}"/>
</f:fields>
</f:FormElement>
<f:FormElement label="Gold Advance">
<f:fields>
<Input id="idCoGold" type="Number" value="{local>/customerOrder/Gold}"/>
</f:fields>
</f:FormElement>
<f:FormElement label="Silver Advance">
<f:fields>
<Input id="idCoSilver" type="Number" value="{local>/customerOrder/Silver}"/>
</f:fields>
</f:FormElement>
<f:FormElement label="Picture">
<f:fields>
<Input id="idCoPicture"  value="{local>/customerOrder/Picture}"/>
</f:fields>
</f:FormElement>
</f:formElements>
<f:layoutData>
<f:GridContainerData halfGrid="true"></f:GridContainerData>
</f:layoutData>
</f:FormContainer>
</f:formContainers>
</f:Form>
</VBox>
</core:FragmentDefinition>
