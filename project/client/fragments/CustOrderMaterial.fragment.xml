<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:unified="sap.ui.unified">
<VBox class="sapUISmallMargin">
<f:Form id="idCoForm2" editable="true">
<f:title>
<core:Title text="{i18n>coOrdDtl}"/>
</f:title>
<f:layout>
  <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="2" labelSpanS="12"
              emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" adjustLabelSpan="false"
              columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false"/>
</f:layout>
<f:formContainers>
<f:FormContainer title="{i18n>coOrdItem}">
<f:formElements>
<f:FormElement label="{i18n>coMaterial}">
<f:fields>
<Input id="idCoMaterial" value="{local>/coTemp/MaterialCode}" showValueHelp="true" valueHelpRequest="onValueHelpMat">
</Input>
<Input id="idCoMatName" value="" editable="false"/>
</f:fields>
</f:FormElement>
<f:FormElement label="{i18n>coComb}">
<f:fields>
<Input value="{local>/customerOrder/Qty}" submit="onSubmit" id="idCoQty" type="Number"   placeholder="{i18n>coQty}"/>
<Input value="{local>/customerOrder/Weight}" id="idCoWeight" type="Number" placeholder="{i18n>coWeight}"/>
<Input value="{local>/customerOrder/Making}" id="idCoMaking" type="Number"  placeholder="{i18n>coMaking}"/>
</f:fields>
</f:FormElement>
<f:FormElement label="{i18n>coKarigar}">
<f:fields>
<Input id="idCoKarigar" value="{local>/coTemp/KarigarCode}" showValueHelp="true" valueHelpRequest="onValueHelpKarigar"/>
<Input id="idCoKarigarName" value="" editable="false"/>
</f:fields>
</f:FormElement>
<f:FormElement label="{i18n>coRemarks}">
<f:fields>
<Input id="idCoRemarks" value="{local>/customerOrder/Remarks}"/>
</f:fields>
</f:FormElement>
</f:formElements>
<f:layoutData>
<f:GridContainerData halfGrid="true"></f:GridContainerData>
</f:layoutData>
</f:FormContainer>

<f:FormContainer title="{i18n>coOrdAdv}">
<f:formElements>
<f:FormElement label="{i18n>Cash}">
<f:fields>
<!-- <Input id="idCoCash" type="Number" value="{local>/customerOrder/Cash}"/> -->
<Input id="idCoCash" type="Number" value="{
                                            path:'local>/customerOrder/Cash',
                                        formatter:'.formatter.getIndianCurr'}"/>
</f:fields>
</f:FormElement>
<f:FormElement label="{i18n>Gold}">
<f:fields>
<Input id="idCoGold" type="Number" value="{local>/customerOrder/Gold}"/>
</f:fields>
</f:FormElement>
<f:FormElement label="{i18n>Silver}">
<f:fields>
<Input id="idCoSilver" type="Number" value="{local>/customerOrder/Silver}"/>
</f:fields>
</f:FormElement>
<f:FormElement label="{i18n>coPic}">
<f:fields>
<!-- <Input id="idCoPicture"  value="{local>/customerOrder/Picture}"/> -->
<unified:FileUploader id="idCoUploader" buttonText="Browse..." style="Emphasized" icon="sap-icon://search" buttonOnly="false" enabled="true" width="100%"
  iconFirst="true" uploadOnChange="false" multiple="true" maximumFileSize="10"
  mimeType="image/jpeg,image/gif,image/png"
  uploadComplete="_onFileUploaderUploadComplete" change="onFileUploaderChange" typeMissmatch="_onFileUploaderTypeMissmatch"
  fileSizeExceed="_onFileUploaderFileSizeExceed">
  <unified:headerParameters/>
  <unified:parameters/>
  <unified:xhrSettings/>
</unified:FileUploader>
</f:fields>
</f:FormElement>
<f:FormElement label="">
<Button text="Upload Picture" id="idCoUpload" press="handleUploadPress" type="Emphasized" icon="sap-icon://upload" iconFirst="true" width="auto" enabled="true" visible="true"
  iconDensityAware="false">
  <layoutData>
  <l:GridData span="XL3 L3 "/>
  </layoutData>
</Button>
</f:FormElement>
</f:formElements>
<f:layoutData>
<f:GridContainerData halfGrid="true"></f:GridContainerData>
</f:layoutData>
</f:FormContainer>
</f:formContainers>
</f:Form>
</VBox>
</core:FragmentDefinition>
