<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" width="160px">
	<VBox class="sapUiSmallMargin">
		<f:Form id="WSOrderHeader" editable="true">
			<f:toolbar>
			<Toolbar id="TB1">
			<ToolbarSpacer/>
			<core:Icon id="idSaveIcon" src="sap-icon://status-completed"
			class="size1"	color="green"
			size="30px" alt="Save Status" tooltip="Save Status"/>
			</Toolbar>
			</f:toolbar>
			<f:layout>
				<f:ResponsiveGridLayout adjustLabelSpan="true"
					columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false"/>
			</f:layout>
			<f:formContainers>
				<!-- //Order detail -->
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>Date}">
							<f:fields>
								<DatePicker id="DateId" valueFormat="yyyy-MM-dd" required="true" displayFormat="dd.MM.yyyy" change="onPayDateChange" width="50%"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>Customer}">
							<f:fields>
								<Input id="customerId" value="{local>/orderHeaderTemp/CustomerId}"
								      showValueHelp="true" valueHelpRequest="valueHelpCustomer"
								      valueLiveUpdate="true" required="true"
											valueHelpOnly="true" editable="true" enabled="true"/>
								<Input id="custName" value="{local>/orderHeaderTemp/CustomerName}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>OrderNo}">
							<f:fields>
								<Input id="idOrderNo" value="{local>/WSOrderHeader/OrderNo}"
									showValueHelp="true" valueHelpRequest="valueHelpOrder"
									valueHelpOnly="true" editable="true" enabled="true"/>
								<Button text="{i18n>C}" press="orderCreate"/>
								<Button icon="sap-icon://nav-back"/>
								<Button icon="sap-icon://feeder-arrow"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
					<f:layoutData>
						<f:GridContainerData halfGrid="true"></f:GridContainerData>
					</f:layoutData>
				</f:FormContainer>
			</f:formContainers>
			<f:formContainers>
				<!-- //tunch detail -->
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>WSGBhav}">
							<f:fields>
								<Input type="Number" id="idGbhav" placeholder="{i18n>WSGBhav}" value="{local>/WSOrderHeader/Goldbhav}" editable="true"/>
							</f:fields>
						</f:FormElement>

						<f:FormElement label="{i18n>WSSBhav}">
							<f:fields>
								<Input type="Number" editable="true" id="idSBhav" placeholder="{i18n>WSSBhav}" tooltip="{i18n>Gold}" value="{local>/WSOrderHeader/SilverBhav}"/>
							</f:fields>
						</f:FormElement>

						<f:FormElement label="{i18n>WSGBhavK}">
							<f:fields>
								<Input type="Number" editable="true" id="idGbhavK" placeholder="{i18n>WSGBhavK}" value="{local>/WSOrderHeader/GoldbhavK}"/>
							</f:fields>
						</f:FormElement>

						<f:FormElement label="{i18n>WSSBhavK}">
							<f:fields>
								<Input type="Number" editable="true" id="idSBhavK" placeholder="{i18n>WSSBhavK}" tooltip="{i18n>Sbhav}" value="{local>/WSOrderHeader/SilverBhavK}"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
					<f:layoutData>
						<f:GridContainerData halfGrid="true"></f:GridContainerData>
					</f:layoutData>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>
