<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core">
  <VBox class="sapUiSmallMargin">
	<f:Form id="idForm1" editable="true">
		<f:layout>
			<f:ResponsiveGridLayout
			   labelSpanXL="2"
          labelSpanL="2"
          labelSpanM="2"
          labelSpanS="12"
          adjustLabelSpan="false"
          emptySpanXL="0"
          emptySpanL="0"
          emptySpanM="0"
          emptySpanS="0"
          columnsXL="2"
          columnsL="2"
          columnsM="2"
          singleContainerFullSize="false"></f:ResponsiveGridLayout>
		</f:layout>
		<f:formContainers>
			<f:FormContainer>
				<f:formElements>
					<f:FormElement label="{i18n>Cash}">
						<f:fields>
							<Input id="idCash" width="50%" value="{objectView>/Cash}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>Gold}">
						<f:fields>
							<Input id="idGold" width="50%" value="{objectView>/Gold}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>Silver}">
						<f:fields>
							<Input id="idSilver" width="50%" value="{objectView>/Silver}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>Remarks}">
						<f:fields>
							<Input id="idRemarks" value="{objectView>/Remarks}"></Input>
						</f:fields>
					</f:FormElement>
				</f:formElements>
				<f:layoutData>
					<f:GridContainerData halfGrid="true"></f:GridContainerData>
				</f:layoutData>
			</f:FormContainer>
			<f:FormContainer>
				<f:formElements>
					<f:FormElement>
						<f:fields>
              <RadioButtonGroup columns="3" class="sapUiMediumMarginBottom" select="onRadioButtonSelect">
                <buttons>
                  <RadioButton id="RB-1" text="{i18n>Chandi}" />
                  <RadioButton id="RB-2" text="{i18n>Sona}" />
                  <RadioButton id="RB-3" text="{i18n>Kacchi}" />
                </buttons>
                </RadioButtonGroup>

							<!-- <CheckBox text="{i18n>Chandi}" selected="true">
								<layoutData>
									<l:GridData span="L8"></l:GridData>
								</layoutData>
							</CheckBox>
							<CheckBox text="{i18n>Sona}" selected="true">
								<layoutData>
									<l:GridData span="L8"></l:GridData>
								</layoutData>
							</CheckBox>
							<CheckBox text="{i18n>Kacchi}" selected="true">
								<layoutData>
									<l:GridData span="L8"></l:GridData>
								</layoutData>
							</CheckBox> -->
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>coWeight}">
						<f:fields>
							<Input id="idweight" value="{objectView>/Weight}">
								<layoutData>
									<l:GridData span="L3"></l:GridData>
								</layoutData>
							</Input>
            </f:fields>
          </f:FormElement>
          <f:FormElement label="{i18n>tunch}">
            <f:fields>
							<!-- <Label text="{i18n>tunch}" class="sapUiSmallMarginTop sapUiSmallMarginBottom" width="100%">
								</Label> -->
							<Input id="idtunch" value="{objectView>/Tunch}">
								<layoutData>
									<l:GridData span="L8"></l:GridData>
								</layoutData>
							</Input>
							<Button text="{i18n>Calculate}" press="onCalculate"></Button>
							</f:fields>
							</f:FormElement>
            </f:formElements>
            <f:layoutData>
              <f:GridContainerData halfGrid="true"></f:GridContainerData>
            </f:layoutData>
          </f:FormContainer>
          <f:FormContainer>
            <f:formElements>
							<f:FormElement label="{i18n>DueDate}">
							<f:fields>
                <DatePicker id="DueDateId" valueFormat="dd.MM.yyyy"
                  displayFormat="dd.MM.yyyy" value="" ></DatePicker>
								<Button text="{i18n>Send}" press="onSend"></Button>
								<Button text="{i18n>Clear}" press="onClear"></Button>
								<Button text="{i18n>master}" press="onMasterClear"></Button>
							</f:fields>
						</f:FormElement>
					</f:formElements>

			</f:FormContainer>
		</f:formContainers>
	</f:Form>
	</VBox>
</core:FragmentDefinition>
