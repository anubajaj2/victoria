<core:FragmentDefinition
  xmlns="sap.ui.table"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core">

  <Table id="idCustTable"
        rows="{kachhiLocalModel>/kachhiData}"
        selectionMode="MultiToggle"
				visibleRowCount="20"
        threshold="20"
        mode="MultiSelect"
        validateFieldGroup="onValidateFieldGroup">
        <extension>
    			<m:Toolbar>
    				<m:Title id="idTitle" text="Kachhi Entries"></m:Title>
    				<m:ToolbarSpacer/>
    				<m:Button icon="sap-icon://delete"
                      press="onDelete">
            </m:Button>
            <m:Button icon="sap-icon://settings" press=""></m:Button>
    			</m:Toolbar>
    		</extension>
  <columns>
    <Column hAlign="Center">
      <m:Label design="Bold" vAlign="Middle" text="{i18n>PaggaNo}" />
      <template>
        <m:Input fieldGroupIds="kachhiInputs" liveChange="onliveChange" required="true" type="Number" id="idPagga" value="{kachhiLocalModel>PaggaNo}"
          enabled="{kachhiLocalModel>/status}" submit="onSubmit" editable="{= ${kachhiLocalModel>id} === '' ? true : false}"/>
      </template>
    </Column>
    <Column hAlign="Center">
      <m:Label design="Bold" text="{i18n>weight}" />
      <template>
        <m:Input id="idWeight" liveChange="onliveChange" fieldGroupIds="kachhiInputs" required="true" type="Number" value="{kachhiLocalModel>Weight}"
          enabled="{kachhiLocalModel>/status}" editable="{= ${kachhiLocalModel>id} === '' ? true : false}"/>
      </template>
    </Column>
    <Column hAlign="Center">
      <m:Label design="Bold" text="{i18n>tunch}" />
      <template>
        <m:Input id="idTunch" liveChange="onliveChange" fieldGroupIds="kachhiInputs" required="true" type="Number" value="{kachhiLocalModel>Tunch}"
          enabled="{kachhiLocalModel>/status}" editable="{= ${kachhiLocalModel>id} === '' ? true : false}"/>
      </template>
    </Column>
    <Column hAlign="Center">
      <m:Label design="Bold" text="{i18n>fine}" />
      <template>
        <m:Input id="idFine" type="Currency" value="{kachhiLocalModel>Fine}" enabled="false"/>
      </template>
    </Column>
  </columns>
</Table>
</core:FragmentDefinition>
