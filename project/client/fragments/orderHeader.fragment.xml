<core:FragmentDefinition
xmlns = "sap.m"
xmlns:l = "sap.ui.layout"
xmlns:f="sap.ui.layout.form"
xmlns:core ="sap.ui.core">

<f:Form id="orderHeader" editable="true">
  <f:layout>
    <f:GridLayout
      labelSpanL="3" labelSpanM="3" emptySpanL="1" emptySpanM="1"
      columnsL="6" columnsXL="6" columnsM="6">
    </f:GridLayout>
  </f:layout>
  <f:formContainers>
    <!-- //Order detail -->
        <f:FormContainer>
            <f:formElements>
              <f:FormElement label="{i18n>OrderNo}">
                <f:fields>
                  <Input>
                    <layoutData>
                    <l:GridData span="L3"></l:GridData>
                  </layoutData>
                  </Input>
                  <Button text="{i18n>C}">
                    <layoutData>
                    <l:GridData span="L1 M1"></l:GridData>
                  </layoutData>
                  </Button>
                  <Button text="{}">
                    <layoutData>
                    <l:GridData span="L1 M1 "></l:GridData>
                  </layoutData>
                  </Button>
                  <Button text="{}">
                    <layoutData>
                    <l:GridData span="L1"></l:GridData>
                  </layoutData>
                  </Button>
                </f:fields>
              </f:FormElement>
              <f:FormElement label="{i18n>Date}">
                <f:fields>
                  <Input></Input>
                </f:fields>
              </f:FormElement>
              <f:FormElement label="{i18n>Customer}">
                <f:fields>
                  <Input></Input>
                  <Input editable="false"></Input>
                </f:fields>
              </f:FormElement>
            </f:formElements>
            <f:layoutData>
              <f:GridContainerData halfGrid="true"></f:GridContainerData>
            </f:layoutData>
        </f:FormContainer>
    <!-- //tunch detail -->
        <f:FormContainer>
          <f:formElements>
            <f:FormElement label="{i18n>Gbhav}">
              <f:fields>
                <Input></Input>
                <Input></Input>
              </f:fields>
            </f:FormElement>
            <f:FormElement label="{i18n>Sbhav}">
              <f:fields>
                <Input></Input>
              </f:fields>
            </f:FormElement>
          </f:formElements>
          <f:layoutData>
            <f:GridContainerData halfGrid="true"></f:GridContainerData>
          </f:layoutData>
        </f:FormContainer>
  </f:formContainers>
</f:Form>
</core:FragmentDefinition>
