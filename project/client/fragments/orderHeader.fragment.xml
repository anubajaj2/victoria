<core:FragmentDefinition
xmlns = "sap.m"
xmlns:l = "sap.ui.layout"
xmlns:f="sap.ui.layout.form"
xmlns:core ="sap.ui.core" width="160px">
<VBox class="sapUiSmallMargin">
<f:Form id="orderHeader" editable="true">
  <f:layout>
    <f:GridLayout hSpacing="1" vSpacing="1"
      labelSpanXl="2" labelSpanL="2" labelSpanM="2"
      emptySpanXL="0" emptySpanL="0" emptySpanM="0"
      columnsXL="10" columnsL="8" columnsM="6"
      singleContainerFullSize="false">
    </f:GridLayout>
  </f:layout>
  <f:formContainers>
    <!-- //Order detail -->
        <f:FormContainer>
            <f:formElements>
              <f:FormElement label="{i18n>OrderNo}">
                <f:fields>
                  <Input id="orderno"
                     showValueHelp="true"
                     valueHelpRequest="valueHelpOrder">
                    <layoutData>
                    <l:GridData span="L5 M5"></l:GridData>
                  </layoutData>
                  </Input>
                  <Button text="{i18n>C}">
                    <layoutData>
                    <!-- <l:GridData indent="L1 M1"></l:GridData> -->
                    <l:GridData span="L1 M1"></l:GridData>
                  </layoutData>
                  </Button>
                  <Button icon="sap-icon://nav-back">
                    <layoutData>
                    <l:GridData indent="L1 M1"></l:GridData>
                  </layoutData>
                  </Button>
                  <Button icon="sap-icon://feeder-arrow">
                    <layoutData>
                    <l:GridData indent="L1 M1"></l:GridData>
                  </layoutData>
                  </Button>
                </f:fields>
              </f:FormElement>
              <f:FormElement label="{i18n>Date}">
                <f:fields>
                  <Input type="Date">
                  <!-- <DatePicker id="odate" valueFormat="dd.mm.yyyy"/> -->
                    <layoutData>
                    <l:GridData indent="L5 M5"></l:GridData>
                  </layoutData>
                  </Input>
                </f:fields>
              </f:FormElement>
              <f:FormElement label="{i18n>Customer}">
                <f:fields>
                  <Input id="customer" showValueHelp="true" valueHelpRequest="valueHelpCustomer">
                    <layoutData>
                    <l:GridData span="L3 M3"></l:GridData>
                  </layoutData>
                  </Input>
                  <Input id="custName" editable="false"/>
                  <!-- </Input> -->
                </f:fields>
              </f:FormElement>
            </f:formElements>
            <f:layoutData>
              <f:GridContainerData halfGrid="true"></f:GridContainerData>
            </f:layoutData>
        </f:FormContainer>
  </f:formContainers>
  <f:formContainers>
    <!-- //tunch detail -->
        <f:FormContainer>
          <f:formElements>
            <f:FormElement label="{i18n>Gbhav}">
              <f:fields>
                <Input></Input>
                <Input></Input>
              </f:fields>
            </f:FormElement>
            <f:FormElement label="{i18n>Sbhav}">
              <f:fields>
                <Input></Input>
              </f:fields>
            </f:FormElement>
          </f:formElements>
          <f:layoutData>
            <f:GridContainerData halfGrid="true"></f:GridContainerData>
          </f:layoutData>
        </f:FormContainer>
  </f:formContainers>
</f:Form>
</VBox>
</core:FragmentDefinition>
