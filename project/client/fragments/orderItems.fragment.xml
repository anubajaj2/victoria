<core:FragmentDefinition xmlns:core="sap.ui.core"
  xmlns="sap.ui.table"
  xmlns:m="sap.m">
  <Table id="orderItems"
    rows="{orderItems>/itemData}" visibleRowCount="20"
    class="sapUiContentPadding" updateFinished="onUpdateFinished">
        <extension>
    <m:Toolbar>
      <m:content>
      <m:Title text="{i18n>orderItems}"></m:Title>
        <m:ToolbarSpacer/>
        <m:Button icon="sap-icon://delete"
          iconFirst="true"
            press="onDelete">
        </m:Button>
      </m:content>
      </m:Toolbar>
    </extension>
    <columns>
      <Column width="120px">
        <label>
          <m:Text text="{i18n>material}"></m:Text>
        </label>
        <template>
        <!-- <m:Input text="{orderItems>material}" showValueHelp="true" valueHelpRequest="onMaterialF4"></m:Input> -->
        <m:ComboBox id="idMaterial" items="{/Products}"
                   selectionChange="onMaterialSelect" >
          <m:items>
            <core:Item key="{id}" text="{ProductCode}"/>
          </m:items>
        </m:ComboBox>
        </template>
      </Column>
      <Column width="120px">
        <label>
          <m:Text text="{i18n>description}"></m:Text>
        </label>
        <template>
        <!-- <m:Text text="{local>/RetailOrderItemTemp/MaterialName}"></m:Text> -->
        <m:Input value="{local>/RetailOrderItemTemp/MaterialName}"
                 editable="false" liveChange="ValueChange"/>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="{i18n>qty}"></m:Text>
        </label>
        <template>
        <m:Input type="Number" value="{local>/orderItem/qty}"
                  maxLength="3" liveChange="ValueChange"/>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="{i18n>qtyD}"></m:Text>
        </label>
        <template>
        <m:Input type="Number" value="{local>/orderItem/>qtyd}"
                 valueLiveUpdate="ValueChange" maxLength="3"/>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="{i18n>weight}"></m:Text>
        </label>
        <template>
        <m:Input type="Number" value="{local>/orderItem/weight}"
                maxLength="5" liveChange="ValueChange"/>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="{i18n>weightD}"></m:Text>
        </label>
        <template>
        <m:Input type="Number" value="{local>/orderItem/weightd}"
                 liveChange="ValueChange" maxLength="5"/>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="{i18n>making}"></m:Text>
        </label>
        <template>
        <m:Input type="Number" value="{local>/orderItem/making}"
                liveChange="ValueChange" maxLength="5"/>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="{i18n>makingD}"></m:Text>
        </label>
        <template>
        <m:Input type="Number" value="{local>/orderItem/makingd}"
                maxLength="5" liveChange="ValueChange"/>
        </template>
      </Column>
      <Column visible="{visModel>/rows1}">
        <label>
          <m:Text text="{i18n>tunch}"></m:Text>
        </label>
        <template>
        <m:Text text="{orderItems>tunch}"></m:Text>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="{i18n>remarks}"></m:Text>
        </label>
        <template>
        <m:Input value="{local>/orderItem/remarks}" maxLength="80"></m:Input>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="{i18n>subTotal}"></m:Text>
        </label>
        <template>
        <m:Text text="{local>/orderItem/subTot}"></m:Text>
        </template>
      </Column>
    </columns>
  </Table>
</core:FragmentDefinition>
