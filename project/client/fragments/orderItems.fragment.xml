<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.ui.table" xmlns:m="sap.m">
	<Table id="orderItemBases" rows="{orderItems>/itemData}" visibleRowCount="05" class="sapUiContentPadding" updateFinished="onUpdateFinished">
		<extension>
			<m:Toolbar>
				<m:content>
					<m:Title text="{i18n>orderItems}"></m:Title>
					<m:ToolbarSpacer/>
					<m:Button icon="sap-icon://delete" iconFirst="true" press="onDelete"></m:Button>
				</m:content>
			</m:Toolbar>
		</extension>
		<columns>
			<Column width="120px">
				<label>
					<m:Text text="{i18n>material}"></m:Text>
				</label>
				<template>
					<!-- <m:Input text="{orderItemBases>material}" showValueHelp="true" valueHelpRequest="onMaterialF4"></m:Input> -->
					<m:ComboBox id="idMaterial" items="{/Products}" selectionChange="onMaterialSelect" liveChange='ValueChange' selectedKey="{orderItems>MaterialCode}">
						<m:items>
							<core:Item key="{id}" text="{ProductCode}"/>
						</m:items>
					</m:ComboBox>
				</template>
			</Column>
			<Column width="100px">
				<label>
					<m:Text text="{i18n>description}"></m:Text>
				</label>
				<template>
					<!-- <m:Text text="{orderItems>MaterialName}"></m:Text> -->
					<m:Input value="{orderItems>Description}" editable="false" liveChange="ValueChange"/>
				</template>
			</Column>
			<Column>
				<label>
					<m:Text text="{i18n>qty}"></m:Text>
				</label>
				<template>
					<m:Input id="IdQty" type="Number" value="{orderItems>Qty}"
						 			maxLength="3" liveChange="ValueChange"/>
				</template>
			</Column>
			<Column>
				<label>
					<m:Text text="{i18n>qtyD}"></m:Text>
				</label>
				<template>
					<m:Input id="IdQtyD" type="Number" value="{orderItems>QtyD}"
							liveChange="ValueChange" maxLength="3"/>
				</template>
			</Column>
			<Column width="70px">
				<label>
					<m:Text text="{i18n>weight}"></m:Text>
				</label>
				<template>
					<m:Input id="Idweight" type="Number" value="{orderItems>Weight}"
						 maxLength="5" liveChange="ValueChange"/>
				</template>
			</Column>
			<Column width="75px">
				<label>
					<m:Text text="{i18n>weightD}"></m:Text>
				</label>
				<template>
					<m:Input id="IdWeightD" type="Number" value="{orderItems>WeightD}"
						liveChange="ValueChange" maxLength="5"/>
				</template>
			</Column>
			<Column width="75px">
				<label>
					<m:Text text="{i18n>making}"></m:Text>
				</label>
				<template>
					<m:Input id="IdMaking" type="Number" value="{orderItems>Making}"
						 liveChange="ValueChange" maxLength="5"/>
				</template>
			</Column>
			<Column width="75px">
				<label>
					<m:Text text="{i18n>makingD}"></m:Text>
				</label>
				<template>
					<m:Input id="IdMakingD" type="Number" value="{orderItems>MakingD}"
						 maxLength="5" liveChange="ValueChange"/>
				</template>
			</Column>
			<Column width="60px" visible="{visModel>/rows1}">
				<label>
					<m:Text text="{i18n>tunch}"></m:Text>
				</label>
				<template>
					<m:Input value="{orderItems>Tunch}" editable="false"></m:Input>
				</template>
			</Column>
			<Column width="75px">
				<label>
					<m:Text text="{i18n>remarks}"></m:Text>
				</label>
				<template>
					<m:Input value="{orderItems>Remarks}" maxLength="80"></m:Input>
				</template>
			</Column>
			<Column visible="{visModel>/rows1}">
				<label>
					<m:Text text="{i18n>subTotalS}"></m:Text>
				</label>
				<template>
					<m:Input value="{orderItems>SubTotalS}" editable="false"/>
				</template>
			</Column>
			<Column visible="{visModel>/rows1}">
				<label>
					<m:Text text="{i18n>subTotalG}"/>
				</label>
				<template>
					<m:Input value="{orderItems>SubTotalG}" editable="false"/>
				</template>
			</Column>
			<Column>
				<label>
					<m:Text text="{i18n>subTotal}"></m:Text>
				</label>
				<template>
					<m:Input value="{orderItems>SubTot}" editable="false"/>
				</template>
			</Column>
		</columns>
	</Table>
</core:FragmentDefinition>
