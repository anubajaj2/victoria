<core:FragmentDefinition xmlns:core="sap.ui.core"
  xmlns="sap.ui.table"
  xmlns:m="sap.m">
  <Table id="orderItems"
    rows="{orderItems>/itemData}" visibleRowCount="20"
    class="sapUiContentPadding">
        <extension>
    <m:Toolbar>
      <m:content>
      <m:Title text="Order Items"></m:Title>
        <m:ToolbarSpacer/>
        <m:Button icon="sap-icon://delete"
          iconFirst="true"
            press="onDelete">
        </m:Button>
      </m:content>
      </m:Toolbar>
    </extension>
    <columns>
      <Column>
        <label>
          <m:Text text="Material"></m:Text>
        </label>
        <template>
        <m:Input text="{orderItems>material}" showValueHelp="true" valueHelpRequest="onF4Help"></m:Input>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="Description"></m:Text>
        </label>
        <template>
        <m:Text text="{orderItems>description}"></m:Text>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="Qty"></m:Text>
        </label>
        <template>
        <m:Input value="{orderItems>qty}" maxLength="3"></m:Input>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="QtyD"></m:Text>
        </label>
        <template>
        <m:Input value="{orderItems>qtyd}" maxLength="3"></m:Input>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="Weight"></m:Text>
        </label>
        <template>
        <m:Input value="{orderItems>weight}" maxLength="5"></m:Input>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="WeightD"></m:Text>
        </label>
        <template>
        <m:Input value="{orderItems>weightd}" maxLength="5"></m:Input>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="Making"></m:Text>
        </label>
        <template>
        <m:Input value="{orderItems>making}" maxLength="5"></m:Input>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="MakingD"></m:Text>
        </label>
        <template>
        <m:Input value="{orderItems>makingd}" maxLength="5"></m:Input>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="Tunch"></m:Text>
        </label>
        <template>
        <m:Text text="{orderItems>tunch}"></m:Text>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="Remarks"></m:Text>
        </label>
        <template>
        <m:Input value="{orderItems>remarks}" maxLength="80"></m:Input>
        </template>
      </Column>
      <Column>
        <label>
          <m:Text text="Sub-total"></m:Text>
        </label>
        <template>
        <m:Text text="{orderItems>subTot}"></m:Text>
        </template>
      </Column>
    </columns>
  </Table>
</core:FragmentDefinition>
