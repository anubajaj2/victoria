<core:FragmentDefinition
xmlns = "sap.m"
xmlns:l = "sap.ui.layout"
xmlns:f="sap.ui.layout.form"
xmlns:semantic="sap.m.semantic"
xmlns:core ="sap.ui.core">
<VBox class="sapUiSmallMargin">

<f:Form id="idPrint"
	editable="true">
  <f:title>
		<core:Title text="Print Customizing Header"/>
	</f:title>
  <f:layout>
    <f:GridLayout
  		labelSpanXl="3" labelSpanL="3" labelSpanM="2" labelSpanS="12" adjustLabelSpan="false"
  		emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
  		columnsXL="8" columnsL="8" columnsM="2"
  		singleContainerFullSize="false"/>
  </f:layout>
<f:formContainers>
  <f:FormContainer>
    <f:formElements>
      <f:FormElement label="{i18n>companyName}">
        <f:fields>
          <Input id="idCompName" submit="onSubmit" value="">
            <layoutData>
          	<l:GridData span="XL3 L3 "/>
          	</layoutData>
          </Input>
        </f:fields>
      </f:FormElement>
      <f:FormElement label="{i18n>address}">
        <f:fields>
          <Input id="idAdd" submit="onSubmit" value="">
            <layoutData>
          	<l:GridData span="XL3 L3 "/>
          	</layoutData>
          </Input>
        </f:fields>
      </f:FormElement>
      <f:FormElement label="{i18n>contactNo}">
        <f:fields>
          <Input id="idContNo" submit="onSubmit" value="">
            <layoutData>
          	<l:GridData span="XL3 L3 "/>
          	</layoutData>
          </Input>
        </f:fields>
      </f:FormElement>
    </f:formElements>
    <f:layoutData>
    <f:GridContainerData halfGrid="true"></f:GridContainerData>
    </f:layoutData>
  </f:FormContainer>
</f:formContainers>
</f:Form>
</VBox>
</core:FragmentDefinition>
