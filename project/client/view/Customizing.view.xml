<mvc:View controllerName="victoria.controller.customCalculation" xmlns.c="sap.ui.commons"
	xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">

	<semantic:FullscreenPage id="Customizing"
		navButtonPress="onNavBack" showNavButton="true" title="Customizing">

		<semantic:content id="test11">
			<VBox class="sapUiSmallMargin">
				<f:Form id="idCalculation" editable="true"
					title="Retail Calculation Customizing">
					<f:layout>
						<f:ResponsiveGridLayout
						labelSpanXL="2"
		        labelSpanL="2"
		        labelSpanM="2"
		        labelSpanS="10"
		        adjustLabelSpan="false"
		        emptySpanXL="0"
		        emptySpanL="4"
		        emptySpanM="0"
		        emptySpanS="0"
		        columnsXL="2"
		        columnsL="2"
		        columnsM="2"
		        singleContainerFullSize="false"/>
					</f:layout>
					<f:formContainers>
					<f:FormContainer>
					<f:formElements>
					<f:FormElement label="22/20">
						<f:fields>
							<Input id="idFirst" value="{path:'local>/CustomCalculation/First',
																					formatter:'.formatter.getIndianCurr'}">
							</Input>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="22/22">
						<f:fields>
							<Input id="idSecond" value="{path:'local>/CustomCalculation/Second',
																		formatter:'.formatter.getIndianCurr'}">
							</Input>
					</f:fields>
				</f:FormElement>
				<f:FormElement label="Gold">
					<f:fields>
						<Input id="idGold" value="{path:'local>/CustomCalculation/Gold',
																						formatter:'.formatter.getIndianCurr'}">
						</Input>
				</f:fields>
			</f:FormElement>
			<f:FormElement label="Silver">
				<f:fields>
					<Input id="idSilver" value="{path:'local>/CustomCalculation/Silver',
																							formatter:'.formatter.getIndianCurr'}">
					</Input>
			</f:fields>
		</f:FormElement>
			</f:formElements>
			<f:layoutData>
				<f:GridContainerData halfGrid="true"></f:GridContainerData>
			</f:layoutData>
		</f:FormContainer>
		<f:FormContainer>
		<f:formElements>
		<f:FormElement label="Gold Returns">
			<f:fields>
				<Input id="idGoldR" value="{path:'local>/CustomCalculation/GoldReturns',
																					formatter:'.formatter.getIndianCurr'}">
				</Input>
			</f:fields>
		</f:FormElement>
		<f:FormElement label="Silver Returns">
			<f:fields>
				<Input id="idSilverR" value="{path:'local>/CustomCalculation/SilverReturns',
																						formatter:'.formatter.getIndianCurr'}">
				</Input>
		</f:fields>
	</f:FormElement>
</f:formElements>
<f:layoutData>
	<f:GridContainerData halfGrid="true"></f:GridContainerData>
</f:layoutData>
</f:FormContainer>
	</f:formContainers>
</f:Form>

<f:Form id="idWholesale" editable="true"
	title="Wholesale Calculation Customizing">
	<f:layout>
		<f:ResponsiveGridLayout
			 labelSpanXL="2"
				labelSpanL="2"
				labelSpanM="2"
				labelSpanS="10"
				adjustLabelSpan="false"
				emptySpanXL="0"
				emptySpanL="4"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="2"
				columnsL="2"
				columnsM="2"
				singleContainerFullSize="false"></f:ResponsiveGridLayout>
	</f:layout>
	<f:formContainers>
	<f:FormContainer>
	<f:formElements>
	<f:FormElement label="Gold">
		<f:fields>
			<Input id="idGold1" value="{path:'local>/CustomCalculation/Gold1',
																					formatter:'.formatter.getIndianCurr'}" >
			</Input>
		</f:fields>
	</f:FormElement>
	<f:FormElement label="Silver">
		<f:fields>
			<Input id="idSilver1" value="{path:'local>/CustomCalculation/Silver1',
																						formatter:'.formatter.getIndianCurr'}">
			</Input>
	</f:fields>
</f:FormElement>
<f:FormElement label="Kaccha Gold">
	<f:fields>
		<Input id="idKacchaGold" value="{path:'local>/CustomCalculation/KacchaGold',
																						formatter:'.formatter.getIndianCurr'}">
		</Input>
</f:fields>
</f:FormElement>
<f:FormElement label="Kaccha Silver">
<f:fields>
	<Input id="idKacchaSilver" value="{path:'local>/CustomCalculation/KacchaSilver',
																						formatter:'.formatter.getIndianCurr'}">
	</Input>
</f:fields>
</f:FormElement>
</f:formElements>
<f:layoutData>
<f:GridContainerData halfGrid="true"></f:GridContainerData>
</f:layoutData>
</f:FormContainer>
<f:FormContainer>
<f:formElements>
<f:FormElement label="Gold Returns">
<f:fields>
<Input id="idGoldR1" value="{path:'local>/CustomCalculation/GoldReturns1',
																			formatter:'.formatter.getIndianCurr'}">
</Input>
</f:fields>
</f:FormElement>
<f:FormElement label="Silver Returns">
<f:fields>
<Input id="idSilverR1" value="{path:'local>/CustomCalculation/SilverReturns1',
																			formatter:'.formatter.getIndianCurr'}">
</Input>
</f:fields>
</f:FormElement>
<f:FormElement label="Kaccha Gold R">
<f:fields>
<Input id="idKacchaGoldR" value="{path:'local>/CustomCalculation/KacchaGoldR',
																					formatter:'.formatter.getIndianCurr'}">
</Input>
</f:fields>
</f:FormElement>
<f:FormElement label="Kaccha Silver R">
<f:fields>
<Input id="idKacchaSilverR" value="{path:'local>/CustomCalculation/KacchaSilverR',
																						formatter:'.formatter.getIndianCurr'}">
</Input>
</f:fields>
</f:FormElement>

</f:formElements>
<f:layoutData>
<f:GridContainerData halfGrid="true"></f:GridContainerData>
</f:layoutData>
</f:FormContainer>
</f:formContainers>
</f:Form>
</VBox>
		</semantic:content>
		<semantic:customFooterContent>
				<Button text="Save" type="Accept" press="SaveCalculation"/>
				<Button text="Cancel" type="Reject" press="ClearCalculation"/>
		</semantic:customFooterContent>
	</semantic:FullscreenPage>

</mvc:View>
