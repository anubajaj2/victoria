<mvc:View controllerName="victoria.controller.customCalculation" xmlns.c="sap.ui.commons"
	xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">

	<semantic:FullscreenPage id="Customzing"
		navButtonPress="onNavBack" showNavButton="true" title="Customizing">

		<semantic:content id="test11">
			<VBox class="sapUiSmallMargin">
				<f:Form id="idCalculation" editable="true"
					title="Retail Calculation Customizing">
					<f:layout>
						<f:GridLayout
							labelSpanM="2" labelSpanL="2" labelSpanXL="2"
							emptySpanM="0" emptySpanL="0" emptySpanXL="0"
							columnsM="10" columnsL="10" columnsXL="10"
							singleContainerFullSize="false">
						</f:GridLayout>
					</f:layout>
					<f:formContainers>
					<f:FormContainer>
					<f:formElements>
					<f:FormElement label="22/20">
						<f:fields>
							<Input id="idFirst" submit="onSubmit" type="Number" value="{path:'local>/CustomCalculation/First',formatter:'.formatter.formatCurrency'}">
								<layoutData>
								<l:GridData indent="L3 M3"></l:GridData>
							</layoutData>
							</Input>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="22/22">
						<f:fields>
							<Input id="idSecond" type="Number" value="{path:'local>/CustomCalculation/Second',
																									formatter:'.formatter.formatCurrency'}">
							</Input>
					</f:fields>
				</f:FormElement>
				<f:FormElement label="Gold">
					<f:fields>
						<Input id="idGold" type="Number" value="{path:'local>/CustomCalculation/Gold',
																						formatter:'.formatter.formatCurrency'}">
						</Input>
				</f:fields>
			</f:FormElement>
			<f:FormElement label="Silver">
				<f:fields>
					<Input id="idSilver" type="Number" value="{path:'local>/CustomCalculation/Silver',
																							formatter:'.formatter.formatCurrency'}">
					</Input>
			</f:fields>
		</f:FormElement>
			</f:formElements>
			<f:layoutData>
				<f:GridContainerData halfGrid="true"></f:GridContainerData>
			</f:layoutData>
		</f:FormContainer>
		<f:FormContainer>
		<f:formElements>
		<f:FormElement label="Gold Returns">
			<f:fields>
				<Input id="idGoldR" type="Number" value="{path:'local>/CustomCalculation/Gold Returns',
																					formatter:'.formatter.formatCurrency'}">
					<layoutData>
					<l:GridData indent="L3 M3"></l:GridData>
				</layoutData>
				</Input>
			</f:fields>
		</f:FormElement>
		<f:FormElement label="Silver Returns">
			<f:fields>
				<Input id="idSilverR" type="Number" value="{path:'local>/CustomCalculation/Silver Returns',
																						formatter:'.formatter.formatCurrency'}">
				</Input>
		</f:fields>
	</f:FormElement>
</f:formElements>
<f:layoutData>
	<f:GridContainerData halfGrid="true"></f:GridContainerData>
</f:layoutData>
</f:FormContainer>
	</f:formContainers>
</f:Form>

<f:Form id="idWholesale" editable="true"
	title="Wholesale Calculation Customizing">
	<f:layout>
		<f:GridLayout
			labelSpanM="2" labelSpanL="2" labelSpanXL="2"
			emptySpanM="0" emptySpanL="0" emptySpanXL="0"
			columnsM="10" columnsL="10" columnsXL="10"
			singleContainerFullSize="false">
		</f:GridLayout>
	</f:layout>
	<f:formContainers>
	<f:FormContainer>
	<f:formElements>
	<f:FormElement label="Gold">
		<f:fields>
			<Input id="idGold1" type="Number" value="{path:'local>/CustomCalculation/Gold1',
																					formatter:'.formatter.formatCurrency'}" >
				<layoutData>
				<l:GridData indent="L3 M3"></l:GridData>
			</layoutData>
			</Input>
		</f:fields>
	</f:FormElement>
	<f:FormElement label="Silver">
		<f:fields>
			<Input id="idSilver1" type="Number" value="{path:'local>/CustomCalculation/Silver1',
																						formatter:'.formatter.formatCurrency'}">
			</Input>
	</f:fields>
</f:FormElement>
<f:FormElement label="Kaccha Gold">
	<f:fields>
		<Input id="idKacchaGold" type="Number" value="{path:'local>/CustomCalculation/Kaccha Gold',
																						formatter:'.formatter.formatCurrency'}">
		</Input>
</f:fields>
</f:FormElement>
<f:FormElement label="Kaccha Silver">
<f:fields>
	<Input id="idKacchaSilver" type="Number" value="{path:'local>/CustomCalculation/Kaccha Silver',
																						formatter:'.formatter.formatCurrency'}">
	</Input>
</f:fields>
</f:FormElement>
</f:formElements>
<f:layoutData>
<f:GridContainerData halfGrid="true"></f:GridContainerData>
</f:layoutData>
</f:FormContainer>
<f:FormContainer>
<f:formElements>
<f:FormElement label="Gold Returns">
<f:fields>
<Input id="idGoldR1" type="Number" value="{path:'local>/CustomCalculation/Gold Returns1',
																			formatter:'.formatter.formatCurrency'}">
	<layoutData>
	<l:GridData indent="L3 M3"></l:GridData>
</layoutData>
</Input>
</f:fields>
</f:FormElement>
<f:FormElement label="Silver Returns">
<f:fields>
<Input id="idSilverR1" type="Number" value="{path:'local>/CustomCalculation/Silver Returns1',
																			formatter:'.formatter.formatCurrency'}">
</Input>
</f:fields>
</f:FormElement>
<f:FormElement label="Kaccha Gold R">
<f:fields>
<Input id="idKacchaGoldR" type="Number" value="{path:'local>/CustomCalculation/Kaccha Gold R',
																					formatter:'.formatter.formatCurrency'}">
	<layoutData>
	<l:GridData indent="L3 M3"></l:GridData>
</layoutData>
</Input>
</f:fields>
</f:FormElement>
<f:FormElement label="Kaccha Silver R">
<f:fields>
<Input id="idKacchaSilverR" type="Number" value="{path:'local>/CustomCalculation/Kaccha Silver R',
																						formatter:'.formatter.formatCurrency'}">
</Input>
</f:fields>
</f:FormElement>

</f:formElements>
<f:layoutData>
<f:GridContainerData halfGrid="true"></f:GridContainerData>
</f:layoutData>
</f:FormContainer>
</f:formContainers>
</f:Form>
</VBox>
		</semantic:content>
		<semantic:customFooterContent>
				<Button text="Save" type="Accept" press="SaveCalculation"/>
				<Button text="Cancel" type="Reject" press="ClearCalculation"/>
		</semantic:customFooterContent>
	</semantic:FullscreenPage>

</mvc:View>
