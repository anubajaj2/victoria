<mvc:View
	controllerName="victoria.controller.Group"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:footerbar="sap.ushell.ui.footerbar"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<semantic:FullscreenPage
		id="Group"
		navButtonPress="onNavBack"
		showNavButton="true"
		title="Manage Group"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">

		<semantic:content>
		<f:SimpleForm
			minWidth="1024"
			maxContainerCols="2"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanL="3"
			labelSpanM="3"
			emptySpanL="4"
			emptySpanM="4"
			columnsL="1"
			columnsM="1"
			class="editableForm">
			<f:content>
 			    <Label text="Group Code" labelFor="groupCode"/>
				<Input
					id="groupCode"
					type="Text"
					value="{groupModel>/groupCode}">
				</Input>

				<Label text="Group Name"/>
        <Input
					id="groupName"
					type="Text"
					value="{groupModel>/groupName}">
				</Input>

				<Label text="Group Description"/>
				<Input
					id="groupDescription"
					type="Text"
					value="{groupModel>/description}">
				</Input>

			</f:content>
		</f:SimpleForm>

 		</semantic:content>
		<semantic:customFooterContent>
      <Button text="Edit" type="Edit" press="editCity"/>
				<Button text="Save" type="Accept" press="saveCity"/>
				<Button text="Delete" type="Reject" press="deleteCity"/>
		</semantic:customFooterContent>
	</semantic:FullscreenPage>

</mvc:View>
