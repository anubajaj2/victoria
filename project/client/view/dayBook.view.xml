<mvc:View controllerName="victoria.controller.dayBook" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table" xmlns:u="sap.ui.unified" displayBlock="true" xmlns="sap.m" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:core="sap.ui.core" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" xmlns:semantic="sap.m.semantic">
		<semantic:FullscreenPage busyIndicatorDelay="0" title="{i18n>Daybook}" >
			<semantic:customHeaderContent>
				<!-- <Text id="idDB"> </Text> -->
				<Text id="idUser"> </Text>
				<Button icon="sap-icon://log" text="{i18n>Logout}" type="Emphasized" tooltip="{i18n>Logout}" press="logOutApp"/>
			</semantic:customHeaderContent>
<semantic:content>
	<!-- <App>
		<pages>
			<Page>
				<content> -->
					<smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="Entrys" search="onFilterSearch">
						<smartFilterBar:controlConfiguration>
						<smartFilterBar:ControlConfiguration key="Date" index="2" label="{i18n>Date}" groupId="_BASIC" width="300px" visibleInAdvancedArea="true">
								<smartFilterBar:customControl>
									<DateRangeSelection id="dateRangeId"  change="onPayDateChange" />
									<!-- <DatePicker id="DateId1" valueFormat="yyyy-MM-dd" required="false" change="onPayDateChange"
                                 displayFormat="dd.MM.yyyy"  ></DatePicker> -->
									<!-- <DatePicker id="DateId2" valueFormat="yyyy-MM-dd" required="false" change="onPayDateChange"
                                 displayFormat="dd.MM.yyyy" ></DatePicker> -->
								</smartFilterBar:customControl>
							</smartFilterBar:ControlConfiguration>

							<!-- <smartFilterBar:ControlConfiguration key="Date1" index="3" label="End Date" groupId="_BASIC" width="300px" visibleInAdvancedArea="true">
								<smartFilterBar:customControl>

									<DatePicker id="DateId2" valueFormat="yyyy-MM-dd" required="false" change="onPayDateChange"
                                 displayFormat="dd.MM.yyyy" ></DatePicker>
								</smartFilterBar:customControl>
							</smartFilterBar:ControlConfiguration> -->

							<smartFilterBar:ControlConfiguration key="idCustDay" index="1" label="{i18n>Customer}" groupId="_BASIC" width="300px" visibleInAdvancedArea="true">
								<smartFilterBar:customControl>
									    <Input id="idCustDay" showValueHelp="true" editable="true"  valueHelpRequest="onValueHelpRequest" value=""
                                  suggestionItemSelected="onEnter" maxSuggestionWidth="300px"
                                  submit="onEnter" showSuggestion="true" suggestionItems="{/Customers}">
										<suggestionItems>
											<core:ListItem text="{CustomerCode}" key="{City}" additionalText="{Name}"/>
										</suggestionItems>

									</Input>





								</smartFilterBar:customControl>
							</smartFilterBar:ControlConfiguration>


					<smartFilterBar:ControlConfiguration key="Validated" filterType="single"/>
						</smartFilterBar:controlConfiguration>
						<smartFilterBar:layoutData>
							<FlexItemData shrinkFactor="0"/>
						</smartFilterBar:layoutData>
					</smartFilterBar:SmartFilterBar>
<!-- smartFilterId="smartFilterBar" -->
<!-- beforeExport="onBeforeExport" -->
			<smartTable:SmartTable entitySet="/"  useExportToExcel="false"
						useVariantManagement="false" useTablePersonalisation="true" showRowCount="true" persistencyKey="SmartTableRefApp_Explored"
						enableAutoBinding="false" class="sapUiResponsiveContentPadding" tableType="ResponsiveTable" tableBindingPath="local>/EntryData">

						<smartTable:customToolbar>
							<OverflowToolbar design="Transparent">
							  <Title id="idTitle" text="{i18n>allEntries}"></Title>
								<ToolbarSpacer/>
 <!-- enabled="true" -->
								<Button id = "idEntryDownload1" icon="sap-icon://download" press = "onPressEntryDownload" tooltip="{i18n>download}"/>

							</OverflowToolbar>
						</smartTable:customToolbar>
						<Table id="idTable1"
    items="{
           path: '/Entrys',
             sorter: {
             path: 'Date',
             descending: 'true'
             }
           }"
    mode="MultiSelect" growing="true"
	  growingThreshold="20" updateFinished="onUpdateFinished" blocked="false">
    <!-- <headerToolbar>
      <Toolbar>
        <Title id="idTitle" text="{i18n>allEntries}"></Title>
        <ToolbarSpacer/> -->
				<!-- <Button id = "idEntryDownload2" icon="sap-icon://download" press = "onExport" enabled="true"/> -->
        <!-- <Button id="idtool" icon="sap-icon://edit" tooltip="edit entry" press="onEdit"></Button>
        <Button icon="sap-icon://delete" press="onDelete"></Button> -->
      <!-- </Toolbar>
    </headerToolbar> -->
		<columns>
			<Column>
				<Label text="{i18n>Date}" visible="true"></Label>
      </Column>
      <Column>
        <Label text="{i18n>coCustName}" />
      </Column>
      <Column visible="false">
        <Label text="{i18n>custcode}"></Label>
      </Column>
      <Column visible="true" >
        <Label text="{i18n>coMaterial}"></Label>
      </Column>
      <Column>
        <Label id="cash" text="{i18n>amount}" ></Label>
			<footer>
			 <ObjectStatus id="idTC1" text="{i18n>TA}:" state="None" />
			</footer>
			<!-- <Label text=""{ path: '/ProductCollection', formatter: 'sap.m.sample.Table.Formatter.totalFormatter' }""> </Label> -->
      </Column>
      <Column>
        <Label text="{i18n>Gold}"></Label>
					<footer>
					<ObjectStatus text="{i18n>TotalGold}:" id="idG1" state="None" />
					</footer>
      </Column>
        <Column>
          <Label text="{i18n>Silver}"></Label>
					<footer>
						<ObjectStatus text="{i18n>TotalSilver}:" id="idS1"  state="None" />
					</footer>
        </Column>
        <Column>
          <Label text="{i18n>Remarks}"></Label>
        </Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
          <Text id="id1" text= "{
                path: 'Date',
                type: 'sap.ui.model.type.Date',
                formatOptions: {
                      style: 'medium',
                      pattern: 'dd.MM.yyyy'}}"></Text>

            <Text id="id2" text="{CustomerCode}"/>
            <Text id="id3" text="{Customer}" />


            <Text id="id4" text="{Product}" />
            <!-- <Text text="" />
            <Text text="{Material}" /> -->
					<!-- <Text text="{Customer}"></Text> -->
					<Text id="cashid" text="{path:'Cash'}"></Text>
					<!-- <footer><Text text="{path: '/customers', formatter: '.sumAmount'}" /></footer> -->
					<Text id="id5" text="{Gold}"></Text>
					<Text id="id6" text="{Silver}"></Text>
					<Text id="id7" text="{Remarks}"></Text>
        </cells>
      </ColumnListItem>
    </items>
	</Table>
						<smartTable:layoutData>
							<FlexItemData growFactor="1" baseSize="0%"/>
						</smartTable:layoutData>
					</smartTable:SmartTable>
					<!--</VBox>-->

				</semantic:content>
				<!-- </content> -->
				<!-- <footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button text="Save" press="onSave"></Button>
						<Button text="Cancel" press="onCancel"></Button>
					</Toolbar>
				</footer> -->
			<!-- </Page>
		</pages>
	</App> -->
		</semantic:FullscreenPage>
</mvc:View>
