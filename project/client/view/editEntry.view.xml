<mvc:View controllerName="victoria.controller.editEntry" xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:f="sap.ui.layout.form">
  <semantic:FullscreenPage
    id="editEntry"
    navButtonPress="onNavBack"
    showNavButton="true"
    title="Edit Entry">
    <semantic:content>
      <f:SimpleForm
  			minWidth="1024"
  			maxContainerCols="2"
  			editable="true"
  			layout="ResponsiveGridLayout"
  			labelSpanL="3"
  			labelSpanM="3"
  			emptySpanL="4"
  			emptySpanM="4"
  			columnsL="1"
  			columnsM="1"
  			class="editableForm">
        <f:content>
   			    <Label text="Customer Code" labelFor="customerCode" required="true"/>
            <Input id="idCustomerCode" submit="customerCodeCheck" suggest="ValueChangeCustomer"
    					  suggestionItems="{/Customers}" showSuggestion="true"
    					  suggestionItemSelected="customerCodeCheck">
                <suggestionItems>
      						<core:ListItem text="{CustomerCode}"/>
      					</suggestionItems>
            </Input>
            <Label text="Name" labelFor="name" />
            <Input id="idName" value="{customerModel>/Name}"/>
            <Label text="City" labelFor="city" />
            <Input id="idCity" value="{customerModel>/City}"/>
          </f:content>
      </f:SimpleForm>

    </semantic:content>
    <semantic:customFooterContent>
				<Button text="Download" icon="sap-icon://excel-attachment" type="Accept" press="onPressDownload"/>

		</semantic:customFooterContent>
  </semantic:FullscreenPage>
</mvc:View>
