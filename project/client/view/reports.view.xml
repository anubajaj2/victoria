<mvc:View controllerName="victoria.controller.reports" xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:f="sap.ui.layout.form">
  <semantic:FullscreenPage
    id="editEntry"
    navButtonPress="onNavBack"
    showNavButton="true"
    title="Reports">
    <semantic:content>
      <f:SimpleForm
  			minWidth="1024"
  			maxContainerCols="2"
  			editable="true"
  			layout="ResponsiveGridLayout"
  			labelSpanL="3"
  			labelSpanM="3"
  			emptySpanL="4"
  			emptySpanM="4"
  			columnsL="1"
  			columnsM="1"
  			class="editableForm">
        <f:content>
   			    <Label text="Customer Code" labelFor="customerCode" required="true"/>
            <Input id="idCustomerCode" submit="customerCodeCheck" suggest="ValueChangeCustomer"
    					  suggestionItems="{/Customers}" showSuggestion="true"
    					  suggestionItemSelected="customerCodeCheck">
                <suggestionItems>
      						<core:ListItem text="{CustomerCode}"/>
      					</suggestionItems>
            </Input>
            <Label text="Name" labelFor="name" />
            <Text id="idName" text="{customerModel>/Name}"/>
            <Label text="City" labelFor="city" />
            <Text id="idCity" text="{customerModel>/City}"/>
          </f:content>
      </f:SimpleForm>
      <VBox
        alignItems="Center"
        alignContent="Start">
        <HBox
            height="100px"
            alignItems="Start"
            alignContent="Center">
            <items>
              <Button text="Kacchi Download" width="200px" type="Emphasized" press="onPressDownload" class="sapUiSmallMarginEnd" />
              <Button text="Entry Download" type="Reject" class="sapUiSmallMarginEnd" />
              <Button text="Retail Sales Summary" type="Accept" />
            </items>
          </HBox>
          <HBox
              height="100px"
              alignItems="Start"
              alignContent="Center">
              <items>
                <Button text="Wholesale Summary" width="200px" type="Emphasized" class="sapUiSmallMarginEnd" />
                <Button text="Booking Summary" type="Reject" class="sapUiSmallMarginEnd" />
                <Button text="Pending Order Summary" type="Accept" />
              </items>
            </HBox>
      </VBox>

    </semantic:content>
    <semantic:customFooterContent>
				<Button text="Clear" type="Accept" press="onPressClear"/>

		</semantic:customFooterContent>
  </semantic:FullscreenPage>
</mvc:View>
